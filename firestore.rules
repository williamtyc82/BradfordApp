rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Helper function to check if the user is signed in.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Helper function to check if the user is the owner of the document.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * @description Helper function to check if the user is the owner of the EXISTING document.
     * Prevents users from modifying documents they don't own.
     */
    function isExistingOwner(ownerId) {
      return isSignedIn() && ownerId == request.auth.uid;
    }

    /**
     * @description Checks if the user is a manager.
     * Strategy:
     * 1. Check optimized /roles_manager collection (fastest).
     * 2. Fallback to /users profile document if method 1 fails (robustness).
     */
    function isManager() {
      return isSignedIn() && (
        exists(/databases/$(database)/documents/roles_manager/$(request.auth.uid)) ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'manager' ||
        request.auth.token.email == 'williamtyc82@gmail.com' ||
        request.auth.uid == 'J2auMyeflvWcotPRPJOurrfJJ882'
      );
    }
    
    // Alias for consistency in rules usage
    function isExistingManager() {
      return isManager();
    }


    /**
     * @description Controls access to the user's profile document.
     * @path /users/{userId}
     * @allow (get) Users can read their own profile. Managers can read any profile.
     * @allow (create) Users can create their own profile document.
     * @allow (update) Users can update their own profile. Managers can update any profile.
     * @deny (list) Listing all users is disabled for privacy, unless manager.
     */
    match /users/{userId} {
      allow get: if isSignedIn();
      allow list: if isManager();
      allow create: if isOwner(userId) && request.resource.data.id == request.auth.uid;
      allow update: if (isOwner(userId) || isManager()) && request.resource.data.id == resource.data.id;
      // Note: Delete is not allowed in this basic ruleset.
    }

    /**
     * @description Controls access to training materials.
     * @path /trainingMaterials/{materialId}
     * @allow (read) All authenticated users can read training materials.
     * @allow (write) Only managers can create, update, or delete training materials.
     */
    match /trainingMaterials/{materialId} {
      allow read: if isSignedIn();
      allow write: if isExistingManager() || (isManager() && request.method == 'create');
    }

    /**
     * @description Controls access to quizzes.
     * @path /quizzes/{quizId}
     * @allow (read) All authenticated users can read quizzes.
     * @allow (write) Only managers can create, update, or delete quizzes.
     */
    match /quizzes/{quizId} {
        allow read: if isSignedIn();
        allow write: if isExistingManager() || (isManager() && request.method == 'create');
    }

    /**
     * @description Controls access to quiz results.
     * @path /quizResults/{resultId}
     * @allow (create) Authenticated users can submit their own quiz results.
     * @allow (read) Users can read their own results. Managers can read all results.
     */
    match /quizResults/{resultId} {
        allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
        allow get: if isOwner(resource.data.userId) || isManager();
        allow list: if isManager() || (isSignedIn() && resource.data.userId == request.auth.uid);
    }
    
     /**
     * @description Controls access to training logs (views).
     * @path /trainingLogs/{logId}
     * @allow (create) Authenticated users can log their own views.
     * @allow (read) Users can read their own logs. Managers can read all logs.
     */
    match /trainingLogs/{logId} {
        allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
        allow get: if isOwner(resource.data.userId) || isManager();
        allow list: if isSignedIn();
    }

    /**
     * @description Controls access to incidents.
     * @path /incidents/{incidentId}
     * @allow (create) Any authenticated user can report an incident.
     * @allow (read) The reporter can see their incident. Managers can see all.
     * @allow (update) Managers can update status/add comments. Reporters can update if pending.
     */
    match /incidents/{incidentId} {
      allow create: if isSignedIn() && request.resource.data.reportedBy == request.auth.uid;
      allow get: if isOwner(resource.data.reportedBy) || isManager();
      allow list: if isManager() || (isSignedIn() && resource.data.reportedBy == request.auth.uid);
      allow update: if isManager() || (isOwner(resource.data.reportedBy) && resource.data.status == 'Pending');
    }

    /**
     * @description Controls access to announcements.
     * @path /announcements/{announcementId}
     * @allow (read) All authenticated users can read.
     * @allow (write) Only managers can has full access with role-based writes (Manager Only).
     */
    match /announcements/{announcementId} {
      allow get, list: if isSignedIn();
      allow create: if isManager() && request.resource.data.postedBy == request.auth.uid;
      allow update, delete: if isExistingManager();
    }

    /**
     * @description Controls access to a user's progress tracking document.
     * @path /userProgress/{userId}
     * @allow (get, update) A user can access their own progress, and a manager can view any user's progress.
     * @allow (create) A user can create their own progress document.
     * @deny (get) A user tries to read another user's progress.
     * @deny (list) Regular users cannot list all progress documents.
     * @principle Enforces document ownership and allows manager oversight.
     */
    match /userProgress/{userId} {
      allow get: if isOwner(userId) || isManager();
      allow list: if isManager(); // Only managers can list all user progress
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if (isExistingOwner(resource.data.userId) || isExistingManager()) && request.resource.data.userId == resource.data.userId;
      allow delete: if false; // Progress should not be deletable by clients
    }
    
    /**
     * @description Secures the manager role assignment.
     * @path /roles_manager/{userId}
     * @allow (get) A user can check for their own manager status.
     * @allow (create) A user can be designated as a manager during signup if they use the specific manager email.
     * @deny (all) All other client operations are forbidden to prevent unauthorized role changes.
     * @principle Secures the authorization mechanism. This collection is only written to during initial user creation.
     */
    match /roles_manager/{userId} {
      allow get: if isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      allow list: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Controls access to training assignments.
     * @path /trainingAssignments/{assignmentId}
     * @allow (create) Managers can assign training.
     * @allow (read) Users can see their assignments. Managers see all.
     * @allow (update) Managers can update. Users might mark as done later (future proof).
     */
    match /trainingAssignments/{assignmentId} {
      allow create: if isManager();
      allow get: if isManager() || (isSignedIn() && resource.data.userId == request.auth.uid);
      allow list: if isManager() || (isSignedIn() && resource.data.userId == request.auth.uid);
      allow update: if isManager() || (isSignedIn() && resource.data.userId == request.auth.uid);
    }
  }
}
